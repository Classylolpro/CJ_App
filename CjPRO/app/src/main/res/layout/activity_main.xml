<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondis"
    tools:context=".MainActivity">

    <!-- Logo principal -->

    <!-- Avatar arriba derecha -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="289dp"
        android:layout_height="150dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/burra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.245"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón QUIZ -->

    <!-- Icono preguntas -->
    <Button
        android:id="@+id/btnQuiz"
        android:layout_width="315dp"
        android:layout_height="75dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="@android:color/holo_purple"
        android:text="iniciar"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintWidth_percent="0.7" />

    <ImageView
        android:id="@+id/icon_preguntas"
        android:layout_width="82dp"
        android:layout_height="84dp"
        android:src="@drawable/preguntas"
        android:elevation="10dp"
        android:translationX="20dp"
        android:translationY="-20dp"
        app:layout_constraintTop_toTopOf="@id/btnQuiz"
        app:layout_constraintEnd_toEndOf="@id/btnQuiz" />

    <!-- Botón RESULTADOS -->
    <Button
        android:id="@+id/btnResults"
        android:layout_width="317dp"
        android:layout_height="82dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_purple"
        android:text="Resultados"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnQuiz"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Icono estrella -->

    <!-- Botón TUTORIAL -->

    <ImageView
        android:id="@+id/star_score"
        android:layout_width="76dp"
        android:layout_height="88dp"
        android:layout_marginTop="12dp"
        android:elevation="10dp"
        android:src="@drawable/estrella"
        android:translationX="-20dp"
        android:translationY="-20dp"
        app:layout_constraintStart_toEndOf="@id/btnResults"
        app:layout_constraintTop_toTopOf="@id/btnResults" />

    <Button
        android:id="@+id/btnTutorial"
        android:layout_width="317dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_purple"
        android:padding="16dp"
        android:text="Tutorial"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnResults"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Burro en la parte inferior -->

</androidx.constraintlayout.widget.ConstraintLayout>
